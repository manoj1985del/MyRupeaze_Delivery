<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SellerListing">

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:baselineAligned="false"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtName_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Pentaware Technologies LLP" />

            <TextView
                android:id="@+id/txtAddresLine1_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C-201" />

            <TextView
                android:id="@+id/txtAddresLine2_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="East Avenue Apartments, Sector-73" />

            <TextView
                android:id="@+id/txtAddresLine3_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noida" />

            <TextView
                android:id="@+id/txtLandmark_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opposite Raghav Global School" />

            <TextView
                android:id="@+id/txtCity_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noida" />

            <TextView
                android:id="@+id/txtState_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uttar Pradesh - (INDIA)" />

            <TextView
                android:id="@+id/txtPincode_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="201301" />

            <TextView
                android:id="@+id/txtContact_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9971930997" />

            <TextView
                android:id="@+id/txtTotalOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Orders: 5" />






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>